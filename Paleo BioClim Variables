#Paleo BioClim Variables R Script
#input monthly raster layers for min temp, max temp, and precip to output 19 rasters for the 19 bioclimatic variables

library("dismo")
library("raster")
#get raster layers for min temp
setwd("C:/Users/GIS/Documents/gordon/BioClim/MIROC_midH_tn")
mrmidtn1 <- raster("mrmidtn1.tif")
mrmidtn2 <- raster("mrmidtn2.tif")
mrmidtn3 <- raster("mrmidtn3.tif")
mrmidtn4 <- raster("mrmidtn4.tif")
mrmidtn5 <- raster("mrmidtn5.tif")
mrmidtn6 <- raster("mrmidtn6.tif")
mrmidtn7 <- raster("mrmidtn7.tif")
mrmidtn8 <- raster("mrmidtn8.tif")
mrmidtn9 <- raster("mrmidtn9.tif")
mrmidtn10 <- raster("mrmidtn10.tif")
mrmidtn11 <- raster("mrmidtn11.tif")
mrmidtn12 <- raster("mrmidtn12.tif")
tmin <- stack(mrmidtn1, mrmidtn2, mrmidtn3, mrmidtn4, mrmidtn5, mrmidtn6, mrmidtn7, mrmidtn8, mrmidtn9, mrmidtn10, mrmidtn11, mrmidtn12)
#get raster layers for max temp
setwd("C:/Users/GIS/Documents/gordon/BioClim/MIROC_midH_tx")
mrmidtx1 <- raster("mrmidtx1.tif")
mrmidtx2 <- raster("mrmidtx2.tif")
mrmidtx3 <- raster("mrmidtx3.tif")
mrmidtx4 <- raster("mrmidtx4.tif")
mrmidtx5 <- raster("mrmidtx5.tif")
mrmidtx6 <- raster("mrmidtx6.tif")
mrmidtx7 <- raster("mrmidtx7.tif")
mrmidtx8 <- raster("mrmidtx8.tif")
mrmidtx9 <- raster("mrmidtx9.tif")
mrmidtx10 <- raster("mrmidtx10.tif")
mrmidtx11 <- raster("mrmidtx11.tif")
mrmidtx12 <- raster("mrmidtx12.tif")
tmax <- stack(mrmidtx1, mrmidtx2, mrmidtx3, mrmidtx4, mrmidtx5, mrmidtx6, mrmidtx7, mrmidtx8, mrmidtx9, mrmidtx10, mrmidtx11, mrmidtx12)
#get raster layers for precip
setwd("C:/Users/GIS/Documents/gordon/BioClim/MIROC_midH_pr")
mrmidpr1 <- raster("mrmidpr1.tif")
mrmidpr2 <- raster("mrmidpr2.tif")
mrmidpr3 <- raster("mrmidpr3.tif")
mrmidpr4 <- raster("mrmidpr4.tif")
mrmidpr5 <- raster("mrmidpr5.tif")
mrmidpr6 <- raster("mrmidpr6.tif")
mrmidpr7 <- raster("mrmidpr7.tif")
mrmidpr8 <- raster("mrmidpr8.tif")
mrmidpr9 <- raster("mrmidpr9.tif")
mrmidpr10 <- raster("mrmidpr10.tif")
mrmidpr11 <- raster("mrmidpr11.tif")
mrmidpr12 <- raster("mrmidpr12.tif")
prec <- stack(mrmidpr1, mrmidpr2, mrmidpr3, mrmidpr4, mrmidpr5, mrmidpr6, mrmidpr7, mrmidpr8, mrmidpr9, mrmidpr10, mrmidpr11, mrmidpr12)
#get bioclim variables
setwd("C:/Users/GIS/Documents/gordon/BioClim")
bioclim_data <- biovars(prec, tmin, tmax)
#show bioclim variables
bioclim_data
